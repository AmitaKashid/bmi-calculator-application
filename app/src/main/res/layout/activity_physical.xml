<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhysicalActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp">

        <RelativeLayout
            android:id="@+id/rellay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fTemp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="60dp"
                android:fontFamily="serif"
                android:text=""
                android:textColor="#ff0000"
                android:textSize="35sp"
                android:textStyle="italic" />

            <LinearLayout
                android:id="@+id/linelay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvWelcome"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-smallcaps-medium"
                    android:text="Height :"
                    android:textAllCaps="true"
                    android:textColor="#ff000000"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout1"
                        android:layout_width="126dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-smallcaps-light"
                            android:text="feet :"
                            android:textAllCaps="true"
                            android:textColor="#ff000000"
                            android:textSize="15sp" />


                        <Spinner
                            android:id="@+id/spnFeet"
                            android:layout_width="69dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="0dp"
                            android:background="@drawable/et_bg"
                            android:fontFamily="sans-serif-light" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-smallcaps-light"
                            android:text="    inch :"
                            android:textAllCaps="true"
                            android:textColor="#ff000000"
                            android:textSize="15sp" />


                        <Spinner
                            android:id="@+id/spnInch"
                            android:layout_width="75dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/et_bg"
                            android:fontFamily="sans-serif-light"

                            />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps-medium"
                        android:text="Weight"
                        android:textAllCaps="true"
                        android:textColor="#ff000000"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/etWeight"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/et_bg"
                        android:fontFamily="sans-serif-light"
                        android:hint="enter weight in kgs"
                        android:inputType="numberDecimal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#ff000000"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btnCalculate"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/linelay1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="#ff0000"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:text="Calculate"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnHistory"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/btnCalculate"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="#ff0000"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="View History"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>